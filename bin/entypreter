#! /bin/bash

#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[31m"
#green start
	GNS="-e \033[1;32m"
#white start
        WHS="\033[0;97m"

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$BS"[*] "$WHS"Installing update..."$CE""
{
rm -r ~/entypreter
rm /bin/entypreter
rm /usr/local/bin/entypreter
cd ~
git clone https://github.com/entynetproject/entypreter.git
cd entypreter
chmod +x install.sh
./install.sh
} &> /dev/null
echo ""$GNS"[+] "$WHS"Successfully updated..."$CE""
sleep 1
exit
fi

cd ~
if [[ -d ~/entypreter ]]
then
{
cd ~/entypreter
} &> /dev/null
chmod +x entypreter
./entypreter
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/entypreter.git
cd ~/entypreter
} &> /dev/null
chmod +x entypreter
./entypreter
else
cd ~
sleep 1
exit
fi
fi
